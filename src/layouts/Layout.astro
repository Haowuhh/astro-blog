---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Memory Bank' } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="blogs" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="border-b border-gray-200 bg-white">
      <nav class="mx-auto max-w-4xl px-4 py-6">
        <a href="/" class="text-xl font-bold text-gray-900">前端记录</a>
      </nav>
    </header>
    <main class="mx-auto max-w-4xl px-4 py-8">
      <slot />
    </main>
    <footer class="mt-12 border-t border-gray-200 py-6 text-center text-sm text-gray-600">
      <p>&copy; {new Date().getFullYear()} Memory Bank. Built with Astro.</p>
    </footer>
  </body>
</html>
