---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout>
  <div class="space-y-12">
    <section>
      <h1 class="mb-4 text-4xl font-bold">Memory Bank</h1>
      <p class="text-lg text-gray-600">前端学习过程中的记录</p>
    </section>

    <section>
      <h2 class="mb-6 text-2xl font-semibold">文章列表</h2>
      {allPosts.length === 0 ? (
        <p class="text-gray-600">暂无文章</p>
      ) : (
        <div class="space-y-6">
          {allPosts.map((post) => (
            <article class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
              <a href={`/blog/${post.slug}`} class="block text-gray-900">
                <h3 class="mb-2 text-xl font-semibold text-gray-900">
                  {post.data.title}
                </h3>
                <p class="mb-3 text-gray-700">{post.data.description}</p>
                <div class="flex items-center gap-4 text-sm text-gray-500">
                  <time>
                    {new Date(post.data.pubDate).toLocaleDateString('zh-CN')}
                  </time>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex gap-2">
                      {post.data.tags.map((tag: string) => (
                        <span class="rounded bg-gray-100 px-2 py-0.5 text-xs">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </a>
            </article>
          ))}
        </div>
      )}
    </section>
  </div>
</Layout>
